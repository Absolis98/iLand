<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To iLand</h1>
            <p>View our hand-picked islands from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/iLands/new">Add New iLand</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% iLands.forEach(function(iLand){ %> 
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="thumbnail">
                    <img src="<%= iLand.image %>">
                    <div class="caption">
                        <p><%= iLand.name %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    
</div>

    
<%- include("partials/footer") %>